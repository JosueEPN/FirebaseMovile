<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Views.AddMedicamentos"
             Title="AddMedicamentos">
    <VerticalStackLayout>
        <Label 
            Text="Registrar Medicamento"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="NombreEntry" Placeholder="Nombre" />
        <Entry x:Name="UnidadesEntry" Placeholder="Unidades" Keyboard="Numeric" />
        <Entry x:Name="PrecioEntry" Placeholder="Precio Unitario" Keyboard="Numeric" />
        <Entry x:Name="DescripcionEntry" Placeholder="Descripción" />
        <Entry x:Name="UbicacionEntry" Placeholder="Ubicación" />
        <Switch x:Name="EstadoSwitch" IsToggled="true" />
        <Button x:Name="btnGuardar" Text="Guardar" Clicked="btnGuardar_Clicked"  />
    </VerticalStackLayout>
</ContentPage>